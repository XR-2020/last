<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.graduate_sever.Dao.KeJiChuMapper">
    <!--实体映射-->
    <resultMap id="NewSystem" type="com.example.graduate_sever.model.NewSyatemModel">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="finishtime" jdbcType="VARCHAR" property="finishtime"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="partment" jdbcType="VARCHAR" property="partment"/>
        <result column="badge" jdbcType="INTEGER" property="badge"/>
        <result column="shenbao" property="shenbao"/>
        <result column="metails" property="metails"/>
        <result column="type" property="type"/>
    </resultMap>
    <resultMap id="KeJiChuMetails" type="com.example.graduate_sever.common.Metails">
        <result column="metails" property="metails"/>
    </resultMap>
    <!--参与人映射-->
    <resultMap id="KeJiChu_People" type="com.example.graduate_sever.common.People">
        <result column="badeg" jdbcType="INTEGER" javaType="int" property="badge"/>
        <result column="tea_name" jdbcType="VARCHAR" javaType="string" property="name"/>
    </resultMap>
    <resultMap id="KeJiChuChucount" type="java.lang.Long"/>
    <resultMap id="KeJiChuType" type="java.lang.String"/>
    <!--查询教研项目所有成果-->
    <!--application.yml 中通过 type-aliases-package 指定了实体类的为了，因此-->
    <select id="getAllKeJiChu" resultMap="NewSystem,KeJiChuChucount">
        <bind name="beginIndex" value="(pageIndex-1)*pageSize"></bind>
        select * from kejichu where status=1 limit #{beginIndex,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER};select count(*) KeJiChuChucount from kejichu where status=1 ;
    </select>

    <select id="kejichuType" resultMap="KeJiChuType">
       select type from kejichu where id=#{id}
    </select>

    <!--删除一个项目-->
    <delete id="deleteOneKeJiChu">
        delete from kejichu where id=#{id}
    </delete>
    <!--查询指定教研项目成果人员信息-->
    <select id="getKeJiChuDetail" resultMap="KeJiChu_People">
        select teacher.tea_name,teacher.badeg from newparticipation,teacher where newparticipation.badge=teacher.badeg and newparticipation.ach_id=#{id} and newparticipation.type=#{type}
    </select>
<!--    &lt;!&ndash;教研项目成果全局模糊查询&ndash;&gt;-->
    <select id="getSearchKeJiChu" resultMap="NewSystem,KeJiChuChucount">
        <bind name="beginIndex" value="(pageIndex-1)*pageSize"></bind>
        select distinct c.* from kejichu c,teacher t,newparticipation p where status=1 and p.badge=t.badeg and p.ach_id=c.id and CONCAT(c.id,t.tea_name,t.badeg,c.partment,c.name,c.finishtime,c.status,c.type) LIKE CONCAT('%',#{key},'%') limit #{beginIndex,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER};
        select count(*) KeJiChuChucount from (select distinct c.* from kejichu c,teacher t,newparticipation p where status=1 and p.badge=t.badeg and p.ach_id=c.id and CONCAT(c.id,t.badeg,t.tea_name,c.partment,c.name,c.finishtime,c.status,c.type) LIKE CONCAT('%',#{key},'%')) A
    </select>

        <update id="editKeJiChu">
            update `kejichu` set partment=#{partment},finishtime=#{finishtime},name=#{name} where id=#{id}
        </update>

    <update id="passKeJiChu" parameterType="java.lang.Integer">
        update `kejichu` set `status`=#{pass} where id=#{id}
    </update>

    <select id="getKeJiChuMetails" parameterType="java.lang.Integer" resultMap="KeJiChuMetails">
        SELECT metails FROM `kejichu` where id=#{id}
    </select>

    <insert id="insertKeJiChu" parameterType="com.example.graduate_sever.entity.NewSystemEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT IGNORE INTO kejichu( `status`, `name`, `finishtime`, `partment`,`badge`,`type`) VALUES (#{status,jdbcType=INTEGER},#{name,jdbcType=VARCHAR},#{finishtime,jdbcType=VARCHAR},#{partment,jdbcType=VARCHAR},#{badge,jdbcType=INTEGER},#{type,jdbcType=VARCHAR})
    </insert>

    <select id="waitingKeJiChu" resultMap="NewSystem">
        select * from kejichu where status=0 and type=#{type} limit #{beginIndex,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER};
    </select>

    <select id="waitingKeJiChuPageToTal" resultMap="KeJiChuChucount">
        select count(*) KeJiChuChucount from kejichu where status=0 and type=#{type};
    </select>

    <insert id="shenBaoKeJiChu" parameterType="com.example.graduate_sever.entity.NewSystemEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT IGNORE INTO kejichu( `status`, `name`, `finishtime`, `partment`,`shenbao`,`type`,`metails`) VALUES (#{status,jdbcType=INTEGER},#{name,jdbcType=VARCHAR},#{finishtime,jdbcType=VARCHAR},#{partment,jdbcType=VARCHAR},#{shenbao,jdbcType=INTEGER},#{type,jdbcType=VARCHAR},#{metails,jdbcType=BINARY})
    </insert>
</mapper>

